@font-face {
    font-family:'Microsoft YaHei';
    src: url('Microsoft YaHei.eot');
	src: url('Microsoft YaHei.eot?#iefix') format('embedded-opentype'),
		url('Microsoft YaHei.woff2') format('woff2'),
		url('Microsoft YaHei.woff') format('woff'),
		url('Microsoft YaHei.svg#Microsoft YaHei') format('svg');
    font-weight: 400;
    font-style: normal;
    font-stretch: normal;
    unicode-range: U+0021-2074;
}


*{
    margin: 0px;
    padding: 0px;
    box-sizing: border-box;
}

/* Announcement Bar */
.anounce-bar {
    display: flex;
    width: 100%;
    height: 42px;
    background-color: black;
    align-items: center;
    justify-content: center;
}
.text-section {
    font-family: 'Microsoft YaHei';
    color: white;
    text-transform: uppercase;
    font-size: 12.3px;
    font-weight: bold;
}
.left-icon i{
    margin: 0px 50px 0px 0px;
    font-size: 30px;
    color: #fff;
}
.right-icon i{
    margin: 0px 0px 0px 50px;
    font-size: 30px;
    color: #fff;
}
.icons-size {
    max-width: 15px;
}

/*  Section-1 */
.section-1 {
    width: 100%;
    min-height: 485px;
    background-color: #DCB3B3;
    display: flex;
    align-items: center;
}
.nail-collection {
    flex: 0 0 50%;
    max-width: 50%;
}
.nail-img-container {
    flex: 0 0 50%;
    max-width: 50%;
}
.nail-img {
    max-width: 900px;
    width: 100%;
}
.nail-text {
    max-width: 483px;
    margin-top: 30px;
    margin-right: 95px;
}
.nail-heading-text h1{
    font-family:'Microsoft YaHei';
    font-size: 36px;
    color: white;
    font-weight: normal;
}
.nail-heading-text h3{
    font-family:'Microsoft YaHei';
    font-size: 24px;
    color: white;
    font-weight: normal;
}
.nail-text p{
    font-family:'Microsoft YaHei';
    font-size: 18px;
    color: white;
    font-weight: normal;
}
.text-con {
    display: flex;
    flex-direction: column;
    align-items: center;
}

/* section -5 */
.section-5 {
    background-color: #8A90AE;
    min-height: 485px;
    display: flex;
    margin: 50px 0px;
    align-items: center;
}
.section-5-img-container-div {
    /* background-color: #FFB400; */
    flex: 0 0 50%;
    max-width: 50%;
    text-align: center;
}
.section-5-text-container-div {
    /* background-color: aqua; */
    min-height: 330px;
    flex: 0 0 50%;
    max-width: 50%;
}

img.sec-5-img {
    max-width: 700px;
    width: 100%;
}

.section-5-text-container-div span{
    font-family: 'Microsoft YaHei';
    font-style: normal;
    font-size: 36px;
    color: #fff;
}
.section-5-text-container-div p{
    font-family: 'Microsoft YaHei';
    font-style: normal;
    font-size: 18px;
    color: #fff;
    padding-top: 30px;
}
.sec-5-product-container {
    margin: 60px 0px;
}
.sec-5-button {
    background-color: #000;
    padding: 10px;
    max-width: 204px;
}
.sec-5-button a{
    font-family: 'Microsoft YaHei';
    font-style: normal;
    font-size: 16px;
    color: #fff;
    text-decoration: none;
}